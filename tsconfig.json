{
  "compilerOptions": {
    "target": "es2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "files": [
    "index.ts"
  ],
  "include": [
    "index.ts",
    "test"
  ],
  "exclude": [
    "coverage",
    "node_modules",
    "test"
  ]
}